<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/text_grey" android:startColor="@color/text_grey" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/text_grey" android:startColor="@color/text_grey" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="0.5dp" android:color="@color/text_grey" />
            <gradient android:angle="0" android:endColor="@color/white" android:startColor="@color/white" />
        </shape>
    </item>

</selector>