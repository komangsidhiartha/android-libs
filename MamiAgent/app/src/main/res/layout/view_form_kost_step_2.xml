<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        style="@style/Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/msg_input_data_kos"
        android:textAllCaps="true"
        android:textColor="@color/dusty_gray_approx"
        android:textSize="14sp" />

    <TextView
        style="@style/Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:text="@string/msg_kos_name_star"
        android:textColor="@color/dove_gray_approx"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/kosNameEditText"
        style="@style/Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_grey_border_general"
        android:padding="14dp"
        android:textColor="@color/dove_gray_approx" />

    <TextView
        style="@style/Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:text="@string/msg_kos_type"
        android:textColor="@color/dove_gray_approx"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal">

        <com.mamikos.mamiagent.views.TypeKosView
            android:id="@+id/genderMenTypeKosView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.mamikos.mamiagent.views.TypeKosView
            android:id="@+id/genderWomenTypeKosView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.mamikos.mamiagent.views.TypeKosView
            android:id="@+id/genderMixTypeKosView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        style="@style/Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:text="@string/msg_room_size"
        android:textColor="@color/dove_gray_approx"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal">

        <com.mamikos.mamiagent.views.RoomSizeView
            android:id="@+id/threeThreeRoomSizeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.mamikos.mamiagent.views.RoomSizeView
            android:id="@+id/threeFourRoomSizeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.mamikos.mamiagent.views.RoomSizeView
            android:id="@+id/fourFourRoomSizeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.mamikos.mamiagent.views.RoomSizeView
            android:id="@+id/customRoomSizeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
