<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contentTypeKosConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius_type_kos_green"
        android:padding="12dp">

        <ImageView
            android:id="@+id/typeGenderImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_girl" />

        <TextView
            android:id="@+id/genderTypeTextView"
            style="@style/Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/msg_man"
            android:textAllCaps="true"
            android:textColor="@color/apptheme_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/typeGenderImageView"
            app:layout_constraintStart_toStartOf="@+id/typeGenderImageView"
            app:layout_constraintTop_toBottomOf="@+id/typeGenderImageView" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/checkListGenderImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/ic_check_circle_done" />

</FrameLayout>